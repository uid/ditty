<!DOCTYPE html>
<html>
<head>
  <title>Ditty Admin</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= stylesheet_link_tag "admin", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "admin" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to "Ditty Admin", admin_path, class: "brand" %>
      <div class="nav-collapse">
        <ul class="nav">
          <li class="active"><%= link_to "Patterns", admin_patterns_path %></li>
        </ul>
        <p class="navbar-text pull-right"><%= link_to "Back to Ditty &raquo;".html_safe, root_path %></p>
      </div><!--/.nav-collapse -->
    </div>
  </div>
</div>

<div class="container-fluid">
<%= yield %>
</div>

</body>
</html>
